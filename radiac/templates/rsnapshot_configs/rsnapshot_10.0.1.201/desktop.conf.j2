config_version	1.2

snapshot_root	{{ pathToBackupDir }}

cmd_cp		/bin/cp
cmd_rm		/bin/rm
cmd_rsync	/usr/bin/rsync
cmd_logger	/usr/bin/logger

cmd_preexec	/root/preexecMount mount {{ G_MNT }} {{ G_OPT }}
cmd_postexec	/root/preexecMount umount {{ G_MNT }}

retain	daily	5
retain	monthly	6

verbose	2
loglevel	3
logfile	/var/rsnapshot.log

lockfile	/var/run/rsnapshot{{ G_PID }}.pid

# LOCALHOST
backup	{{ G_MNT }}	backup/

