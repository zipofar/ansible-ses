config_version	1.2

snapshot_root	/var/sangig_backup/

cmd_cp		/bin/cp
cmd_rm		/bin/rm
cmd_rsync	/usr/bin/rsync
cmd_logger	/usr/bin/logger

cmd_preexec	/root/preexecMount mount {{ A_MNT }} {{ A_OPT }}
cmd_postexec	/root/preexecMount umount {{ A_MNT }}

retain	daily	2

verbose	2
loglevel	3
logfile	/var/rsnapshot.log

lockfile	/var/run/rsnapshot{{ A_PID }}.pid

# LOCALHOST
backup	{{ A_MNT }}	backup/

